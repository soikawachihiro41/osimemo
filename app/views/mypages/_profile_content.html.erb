<turbo-frame id="content">
  <%= link_to edit_user_path(current_user), data: { turbo: "true" } do %>
    <div class="profile-content text-center p-10 bg-white rounded-lg shadow-lg hover:scale-105 transition-transform duration-300">
      <h2 class="text-2xl font-semibold mb-6">プロフィール</h2>
      <div class="profile-image w-32 h-32 mx-auto mb-4">
        <% if current_user.profile_image.present? %>
          <%= image_tag current_user.profile_image.url, alt: current_user.name, class: "rounded-full border-4 border-pink-300 object-cover w-32 h-32" %>
        <% else %>
          <img src="/default-profile-image.jpg" alt="デフォルト画像" class="rounded-full border-4 border-pink-300 object-cover w-32 h-32" />
        <% end %>
      </div>
      <div class="profile-details">
        <p class="text-lg font-medium">名前: <span class="text-pink-500"><%= current_user.name %></span></p>
      <!-- 他のプロフィール情報 -->
      </div>
    </div>
  <% end %>
</turbo-frame>
