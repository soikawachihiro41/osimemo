      <div class='flex flex-wrap items-center justify-center'>
        <%= image_tag 'アルバム公開.png', class:'w-1/2 sm:w-1/4 mx-auto mb-4', size: '250x250' %>
        <%# <%= image_tag 'みんなの推しアルバム.png', class:'w-1/2 sm:w-1/4 mx-auto mb-4', size: '250x250' %>
