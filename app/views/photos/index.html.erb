<div class="container mx-auto p-4">
  <h1 class="text-2xl mb-4">推しメモリーズ</h1>
  <div class="flex flex-wrap -m-3">
    <% @photos.each do |photo| %>
      <div class="w-full lg:w-1/4 p-3 mb-6">
        <div id="photo-id-<%= photo.id %>" class="border rounded-lg shadow-lg overflow-hidden">
          <%= link_to photo_path(photo) do %>
            <%= image_tag photo.image.url, class: 'w-full h-auto' %>
          <% end %>
          <div class="p-4">
            <div class="flex items-center space-x-2 mb-2">
              <i class="far fa-calendar-alt"></i>
              <%= l(photo.capture_date, format: :long) if photo.capture_date.present? %>
            </div>
            <div class="flex flex-wrap space-x-2 mb-2">
              <% photo.tags.each do |tag| %>
                <span class="inline-block bg-blue-500 text-white rounded-full px-2 py-1 text-xs font-bold"><%= tag.tag_names %></span>
              <% end %>
            </div>
            <p class="text-sm mb-3"><%= photo.body %></p>
            <div class='flex justify-center space-x-2'>
              <%= link_to photo_path(photo), id: "button-show-#{photo.id}", class: 'btn btn-sm btn-outline-secondary' do %>
                <span class="bg-gray-300 hover:bg-gray-400 text-gray-800 font-semibold py-1 px-4 rounded-full border border-gray-400 shadow-sm">詳細</span>
              <% end %>
              <%= link_to edit_photo_path(photo), id: "button-edit-#{photo.id}", class: 'btn btn-sm btn-outline-secondary' do %>
                <span class="bg-gray-300 hover:bg-gray-400 text-gray-800 font-semibold py-1 px-4 rounded-full border border-gray-400 shadow-sm">編集</span>
              <% end %>
              <%= link_to photo_path(photo), id: "button-delete-#{photo.id}", method: :delete, data: { confirm: t('.confirm') } do %>
                <span class="bg-red-300 hover:bg-red-400 text-gray-800 font-semibold py-1 px-4 rounded-full border border-red-400 shadow-sm">削除</span>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
