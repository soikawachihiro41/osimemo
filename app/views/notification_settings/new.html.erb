<div class="min-h-screen flex items-center justify-center">
  <div class="bg-white p-8 rounded-lg shadow-md w-full max-w-md">
    <%= form_with model: @notification_setting, url: notification_settings_path do |form| %>
      <h1 class="font-custom text-4xl mb-6 text-yellow-900 font-kaisei-decol text-center">
        <i class="fas fa-bell"></i> 通知設定 <i class="fas fa-cogs ml-2"></i>
      </h1>

      <div class="mb-4">
        <%= form.label :preferred_time, "通知が来る時間を選んでね", class: "block text-lg text-rose-600 mb-2" %>
        <%= form.select :preferred_time, options_for_select([['未明'], ['明け方'], ['朝'], ['昼前'], ['昼過ぎ'], ['夕方'], ['夜のはじめ頃'], ['夜遅く']]), {}, class: "form-select w-full p-2 border rounded-md custom-focus" %>
      </div>

      <div class="text-center mt-6">
        <%= form.button class: "relative inline-block text-lg group" do %>
          <span class="relative z-10 block px-5 py-3 overflow-hidden font-medium leading-tight text-gray-800 transition-colors duration-300 ease-out border-2 border-gray-900 rounded-lg group-hover:text-white">
            <span class="absolute inset-0 w-full h-full px-5 py-3 rounded-lg bg-gray-50"></span>
            <span class="absolute left-0 w-48 h-48 -ml-2 transition-all duration-300 origin-top-right -rotate-90 -translate-x-full translate-y-12 bg-gray-900 group-hover:-rotate-180 ease"></span>
            <span class="relative">保存</span>
          </span>
          <span class="absolute bottom-0 right-0 w-full h-12 -mb-1 -mr-1 transition-all duration-200 ease-linear bg-gray-900 rounded-lg group-hover:mb-0 group-hover:mr-0" data-rounded="rounded-lg"></span>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
