<%= form_with model: @notification_setting, url: notification_settings_path do |form| %>
  <div class="mb-4">
    <%= form.label :preferred_time, "通知が来る時間を選んでね", class: "block text-lg text-rose-600 mb-2" %>
    <%= form.select :preferred_time, options_for_select([
    ['未明 01:00', '1:00 am'], 
    ['明け方 04:00', '4:00 am'], 
    ['朝 07:00', '7:00 am'], 
    ['昼前 10:00', '10:00 am'], 
    ['昼過ぎ 12:16 pm', '12:16 pm'], 
    ['夕方 16:00', '4:00 pm'], 
    ['夜のはじめ頃 19:40', '7:40 pm'], 
    ['夜遅く 21:50', '9:50 pm']
  ]), {}, class: "form-select w-full p-2 border rounded-md custom-focus" 
    %>


  <%= form.submit "保存", class: "btn btn-primary" %>
<% end %>
